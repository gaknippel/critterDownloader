{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "store:allow-get",
    "store:allow-set",
    "store:allow-load",
    "store:allow-save",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "https://raw.githubusercontent.com/gaknippel/critterDownloader/*"
        },
        {
          "url": "https://github.com/gaknippel/critterDownloader/releases/*"
        }
      ]
    },
    "shell:default"
  ]
}